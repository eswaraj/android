<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_tabs_height"
    android:orientation="horizontal"     
    android:checkedButton="@+id/tab_me">

       
    
    <com.jansampark.vashisthg.widget.RadioButtonCenter
        android:id="@+id/tab_issue"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_tabs_height"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/bottom_tab_one_side_padding"
        android:layout_weight="1"
        android:background="@drawable/tab_bg"
        android:button="@null"
        android:checked="false"
        android:gravity="center"
        android:text="@string/tab_issues"
        android:textColor="#3d3d3d"
        android:textSize="@dimen/bottom_tabs_text" />

    
    <com.jansampark.vashisthg.widget.RadioButtonCenter
        android:id="@+id/tab_analytics"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_tabs_height"
        android:paddingRight="@dimen/bottom_tab_one_side_padding"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/tab_bg"
        android:button="@null"
        android:checked="false"
        android:gravity="center"
        android:text="@string/tab_analytics"
        android:textColor="#3d3d3d"
        android:textSize="@dimen/bottom_tabs_text" />
    
    
    

   
    
 
    
</RadioGroup>