<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_map_height"
            android:layout_alignParentTop="true"

            android:id="@+id/main_map_container">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_annotation"
                android:layout_gravity="center"

                android:src="@drawable/ic_main_annotation"/>

        <fragment

                  android:id="@+id/map"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  class="com.google.android.gms.maps.SupportMapFragment"
                  map:mapType="normal"
                  map:uiRotateGestures="true"
                  map:uiScrollGestures="true"
                  map:uiTiltGestures="true"
                  map:uiZoomControls="false"
                  map:uiZoomGestures="true"
                  map:cameraZoom="14"

                  map:cameraTargetLat="@string/nyc_union_square_lat"
                  map:cameraTargetLng="@string/nyc_union_square_long"
                  map:uiCompass="false"
                />
    </FrameLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_select"
            android:id="@+id/main_select"
            android:textSize="@dimen/main_select_text"
            android:layout_below="@+id/main_map_container"
            android:layout_centerHorizontal="true"/>

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/main_select"
            android:layout_marginTop="@dimen/main_select_bottom_margin"
            android:layout_alignParentLeft="true">



            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_column="0">

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_road"
                        android:id="@+id/main_road"
                        android:onClick="onRoadClick"
                        android:background="@null"
                        android:drawableTop="@drawable/ic_road"
                        android:textSize="@dimen/main_button_text"
                        android:layout_below="@+id/main_transportation"
                        android:layout_toLeftOf="@+id/main_electricity"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_water"
                        android:id="@+id/main_water"
                        android:onClick="onWaterClick"
                        android:background="@null"
                        android:drawableTop="@drawable/ic_road"
                        android:textSize="@dimen/main_button_text"
                        android:layout_centerVertical="true"
                        android:layout_alignRight="@+id/textView"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_transportation"
                        android:onClick="onTransportationClick"
                        android:id="@+id/main_transportation"
                        android:background="@null"
                        android:drawableTop="@drawable/ic_road"
                        android:textSize="@dimen/main_button_text"
                        android:layout_alignTop="@+id/main_electricity"
                        android:layout_alignLeft="@+id/main_law"/>
            </TableRow>

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_column="1">

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/main_button_margin"
                        android:text="@string/main_electricity"
                        android:id="@+id/main_electricity"
                        android:onClick="onElectricityClick"
                        android:layout_below="@+id/main_law"
                        android:background="@null"
                        android:drawableTop="@drawable/ic_road"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/main_button_text"
                        />

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/main_button_margin"
                        android:text="Law And Order"
                        android:id="@+id/main_law"
                        android:onClick="onLawAndOrderClick"
                        android:background="@null"
                        android:drawableTop="@drawable/ic_road"
                        android:textSize="@dimen/main_button_text"
                        android:layout_below="@+id/main_water"
                        android:layout_alignParentLeft="true"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/main_button_margin"
                        android:text="Sewage"
                        android:onClick="onSewageClick"
                        android:id="@+id/main_sewage"
                        android:textSize="@dimen/main_button_text"
                        android:background="@null"
                        android:drawableTop="@drawable/ic_road"
                        android:layout_alignTop="@+id/main_road"
                        android:layout_toRightOf="@+id/main_water"/>
            </TableRow>

    </TableLayout>

</RelativeLayout>
